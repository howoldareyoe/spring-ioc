<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- set注入 -->
    <bean id="book" class="com.yu.spring6.iocxml.di.Book">
        <property name="bname" value="红楼梦"></property>
        <property name="author" value="曹"></property>

    </bean>
    <!-- 构造方法注入· -->
    <bean id="bookCon" class="com.yu.spring6.iocxml.di.Book">
        <constructor-arg name="bname" value="三国"></constructor-arg>
        <constructor-arg name="author" value="罗"></constructor-arg>

    </bean>
</beans>